# SysDesk Frontend - Development Dockerfile
FROM node:20-alpine

# Set working directory
WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci

# Copy configuration files
COPY tsconfig*.json ./
COPY vite.config.ts ./
COPY index.html ./

# Copy public folder
COPY public ./public/

# Copy source code (will be overwritten by volume mount in dev)
COPY src ./src/

# Expose port
EXPOSE 3000

# Environment variable for hot-reload in Docker
ENV WATCHPACK_POLLING=true
ENV VITE_HOST=0.0.0.0

# Development command with hot-reload
CMD ["npm", "run", "dev", "--", "--host", "0.0.0.0"]
